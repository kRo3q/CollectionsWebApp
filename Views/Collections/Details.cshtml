@model CollectionsWebApp.Models.Collection


<h1>@Model.Name</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
             @Html.Raw(Markdig.Markdown.ToHtml(Model.Description))
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Image)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Image)
        </dd>
    </dl>

    <table class="table table-striped">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Tags
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Items) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tags)
            </td>
            <td>
                <a asp-controller="Items" asp-action="Edit" asp-route-id="@item.ItemId">Edit</a> |
                <a asp-controller="Items" asp-action="Delete" asp-route-id="@item.ItemId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
</div>
<div>
    <a asp-action="CreateItem" asp-route-id="@Model?.CollectionId">Add new item</a> |
    <a asp-action="Edit" asp-route-id="@Model?.CollectionId">Edit the collection</a> |
    <a asp-action="MyCollections">Back to List</a>
</div>
